          <div class="well"><h4><strong>Contrase√±a</strong>: <%= user.local.password %></h4></div>

      </div>

        <div class="col-sm-4">
            <form action="/profile" method="post">
                <div class="form-group">
                    <h1><strong>Escribe tu Pregunta</strong></h1>
                    <input class="form-control input-lg" name="inputToProlog" type="text" placeholder="Pregunte algo! en forma de pr(). por favor">
